<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainshopLL"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/TypeTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#B40000"
        android:text="商品類型"
        android:textAlignment="viewStart"
        android:textColor="@android:color/background_light"
        android:textSize="18sp" />

    <GridView
        android:id="@+id/TypeGV"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mainShop_grid_type1_height"
        android:background="#5C5756"
        android:numColumns="3">

    </GridView>

    <TextView
        android:id="@+id/BrandTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#B40000"
        android:text="品牌"
        android:textAlignment="viewStart"
        android:textColor="@android:color/background_light"
        android:textSize="18sp" />

    <GridView
        android:id="@+id/BrandGV"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mainShop_grid_type1_height"
        android:background="#5C5756"
        android:numColumns="3">

    </GridView>

    <TextView
        android:id="@+id/HotTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#B40000"
        android:text="熱銷商品"
        android:textColor="@android:color/background_light"
        android:textSize="18sp" />


    <GridView
        android:id="@+id/gvProductGV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#5C5756"
        android:numColumns="2" />

</LinearLayout>
